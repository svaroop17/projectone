
body {
	margin: 0;
	padding: 0; 
}	

/********************************     Header css starts  *******************************************/
.top-contents {
	font-size: 13px;
	font-weight:normal;
	/*border: black solid thin;*/
	height: auto;
	float:left;
	background:url('../images/top_most_strip.jpg') repeat-x;
}
.top-contents .left-contents {
	/*border: black solid thin;*/
	margin-left: 125px;
	padding: 5px 0;
}	
ul.left-contents {
	margin: 0;
	padding:0;
}
ul.left-contents li {
	/*border : black solid thin;*/
	list-style-type: none;
	float: left;
	margin-right: 0px;
}	
.social-links {
	float: right;
	margin-right: 120px;
	padding: 5px 0;
	/*border: black solid thin;*/
}
.social-links a{
	display : inline-block;
}

img {
	max-width : 100%;
}
@media screen and (max-width:576px) {
		.top-contents  {
		/*border: black solid thin;*/
	}
	.top-contents .left-contents {
		/*border: black solid thin;*/
		margin-left: 0;
	}
	ul.left-contents li {
			/*border : black solid thin;*/
			list-style-type: none;
			float: left;
		}	
	.social-links {
		float: none;
		margin-right: 0px;
		/*border: black solid thin;*/
	}
	.fa {
		width :15px;
	}
}

.top-new-banner {
	position: relative;
	height : 81px;
	max-width: 100%;
	background-image:url('../images/new_banner.jpg');
	background-repeat:no-repeat;
	background-size:cover;
	background-position: auto;
	/*border: black solid thin;*/
	
}
